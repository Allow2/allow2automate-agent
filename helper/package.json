{
  "name": "@allow2/automate-agent-helper",
  "version": "1.0.0",
  "description": "User-space helper for Allow2 Automate Agent - system tray and notifications",
  "main": "dist/bundle.cjs",
  "bin": "dist/bundle.cjs",
  "scripts": {
    "start": "node src/index.js",
    "start:dev": "NODE_ENV=development node src/index.js",
    "prebuild": "npx esbuild src/index.js --bundle --platform=node --target=node20 --outfile=dist/bundle.cjs --format=cjs --external:systray --external:node-notifier",
    "build": "npm run prebuild && pkg dist/bundle.cjs --out-path dist --config package.json",
    "build:all": "npm run prebuild && pkg dist/bundle.cjs --targets node20-linux-x64,node20-macos-x64,node20-macos-arm64,node20-win-x64 --out-path dist --config package.json"
  },
  "pkg": {
    "targets": ["node20-linux-x64", "node20-macos-x64", "node20-macos-arm64", "node20-win-x64"],
    "outputPath": "dist",
    "assets": [
      "src/assets/**/*",
      "node_modules/systray/traybin/**/*",
      "node_modules/node-notifier/vendor/**/*"
    ]
  },
  "devDependencies": {
    "@yao-pkg/pkg": "^5.15.0",
    "esbuild": "^0.20.0"
  },
  "keywords": [
    "parental-controls",
    "system-tray",
    "notifications",
    "allow2"
  ],
  "author": "Allow2",
  "license": "MIT",
  "dependencies": {
    "node-notifier": "^10.0.1",
    "systray": "^1.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
