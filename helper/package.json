{
  "name": "@allow2/automate-agent-helper",
  "version": "1.0.0",
  "description": "User-space helper for Allow2 Automate Agent - system tray and notifications",
  "main": "src/index.js",
  "type": "module",
  "bin": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "start:dev": "NODE_ENV=development node src/index.js",
    "build": "pkg . --out-path dist",
    "build:all": "pkg . --targets node20-linux-x64,node20-macos-x64,node20-macos-arm64,node20-win-x64 --out-path dist"
  },
  "pkg": {
    "targets": ["node20-linux-x64", "node20-macos-x64", "node20-macos-arm64", "node20-win-x64"],
    "outputPath": "dist",
    "assets": [
      "src/assets/**/*"
    ]
  },
  "devDependencies": {
    "@yao-pkg/pkg": "^5.15.0"
  },
  "keywords": [
    "parental-controls",
    "system-tray",
    "notifications",
    "allow2"
  ],
  "author": "Allow2",
  "license": "MIT",
  "dependencies": {
    "node-notifier": "^10.0.1",
    "systray": "^1.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
