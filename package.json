{
  "name": "@allow2/allow2automate-agent",
  "version": "1.0.0",
  "description": "Agent service for process monitoring and parental controls",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "start:dev": "NODE_ENV=development node src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "build:windows": "node installers/windows/build-msi.js",
    "build:macos": "bash installers/macos/build-pkg.sh",
    "build:linux": "bash installers/linux/build-deb.sh",
    "install:service": "node scripts/install-service.js",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration"
  },
  "keywords": [
    "parental-controls",
    "process-monitoring",
    "allow2",
    "agent",
    "service"
  ],
  "author": "Allow2",
  "license": "MIT",
  "dependencies": {
    "bonjour-service": "^1.1.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
