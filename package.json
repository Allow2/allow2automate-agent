{
  "name": "@allow2/allow2automate-agent",
  "version": "1.0.0",
  "description": "Agent service for process monitoring and parental controls",
  "main": "src/index.js",
  "type": "module",
  "bin": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "start:dev": "NODE_ENV=development node src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "build": "pkg . --out-path dist",
    "build:all": "pkg . --targets node20-linux-x64,node20-macos-x64,node20-macos-arm64,node20-win-x64 --out-path dist",
    "build:windows": "bash installers/windows/build.sh",
    "build:macos": "bash installers/macos/build.sh",
    "build:linux": "bash installers/linux/build.sh",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration"
  },
  "pkg": {
    "targets": [ "node20-linux-x64", "node20-macos-x64", "node20-macos-arm64", "node20-win-x64" ],
    "outputPath": "dist",
    "assets": [
      "src/**/*"
    ]
  },
  "keywords": [
    "parental-controls",
    "process-monitoring",
    "allow2",
    "agent",
    "service"
  ],
  "author": "Allow2",
  "license": "MIT",
  "dependencies": {
    "bonjour-service": "^1.1.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@yao-pkg/pkg": "^5.15.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
