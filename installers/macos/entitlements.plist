<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow JIT compilation for Node.js V8 engine -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>

    <!-- Allow unsigned executable memory (required for V8 JIT) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>

    <!-- Disable library validation (for pkg-bundled libraries) -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>

    <!-- Allow dyld environment variables (needed for some pkg binaries) -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>

    <!-- Network client access (for connecting to parent server) -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- Network server access (for mDNS and local API) -->
    <key>com.apple.security.network.server</key>
    <true/>
</dict>
</plist>
